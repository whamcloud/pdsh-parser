{
  "parser": "babel-eslint",
  "plugins": [
    "flowtype",
    "import"
  ],
  "rules": {
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1,
    "flowtype/space-after-type-colon": [
        1,
        "never"
    ],
    "import/no-commonjs": 2,
    "import/no-amd": 2,
    "import/export": 2,
    "no-var": 2,
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "indent": [
      2,
      2
    ],
    "curly": [
      2,
      "multi",
      "consistent"
    ],
    "prefer-const": [
      "error",
      {
        "destructuring": "all",
        "ignoreReadBeforeAssign": false
      }
    ]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "experimentalObjectRestSpread": true
  }
}
